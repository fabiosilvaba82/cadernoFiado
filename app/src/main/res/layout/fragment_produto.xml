<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProdutoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome produto:" />

        <EditText
            android:id="@+id/edtDescricaoProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Informe o nome do produto" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preço produto:" />

        <EditText
            android:id="@+id/edtPrecoProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Informe o Preço do produto"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnSalvarProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar Produto" />

        <ListView
            android:id="@+id/listViewProdutos"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</FrameLayout>